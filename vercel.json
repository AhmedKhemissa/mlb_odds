{
  "version": 2,
  "name": "mlb-odds-tracker",
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "env": {
    "ODDS_API_KEY": "@odds_api_key",
    "ODDS_API_BASE_URL": "https://api.the-odds-api.com/v4",
    "NEXTAUTH_SECRET": "@nextauth_secret",
    "ALLOWED_USERS": "@allowed_users"
  },
  "functions": {
    "src/app/api/**/*.ts": {
      "maxDuration": 30
    }
  }
}
