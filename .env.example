# Production deployment configuration
# Copy this file to .env.local and update with your actual values

# The Odds API Configuration (Required)
ODDS_API_KEY=your_odds_api_key_here
ODDS_API_BASE_URL=https://api.the-odds-api.com/v4

# NextAuth Configuration (Required - Generate secure values)
NEXTAUTH_URL=https://your-app-domain.vercel.app
NEXTAUTH_SECRET=your_secure_nextauth_secret_here_minimum_32_characters

# Application Configuration (Required)
ALLOWED_USERS=steven@example.com,user2@example.com

# Node Environment (Set by hosting platform)
NODE_ENV=production
